{% extends "base.twig" %}

{% block content %}

	{% if is_home %}

		{{ post.content }}
		{% include 'components/tools-certifications.tpl.twig' %}

	{% else %}

		<section class="l-section l-center-align">
			<h1>{{ post.title }}</h1>
		</section>

		<section class="l-section l-light-container l-center-align">
			<div class="row">
				<div class="columns">
					{{ post.content }}
				</div>
			</div>
		</section>

	{% endif %}

{% endblock %}