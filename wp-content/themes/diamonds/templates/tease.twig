<article class="article-body tease tease-{{post.post_type}}">
	{% block content %}
		<h3 class="article-heading"><a href="{{post.link}}">{{post.title}}</a></h3>
		<p>{{post.get_preview}}</p>
		{% if post.get_thumbnail %}
			<img src="{{post.thumbnail.src}}" />
		{% endif %}
	{% endblock %}
</article>