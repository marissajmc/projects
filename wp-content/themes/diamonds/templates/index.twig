{% extends "base.twig" %}

{% block content %}
	<section class="l-section l-center-align">
		<h2>{{ post.title }}</h2>
	</section>

	<section class="l-section l-light-container">
		<div class="row">
			<div class="columns">
				{% for post in posts %}
					{% include ["tease-"~post.post_type~".twig", "tease.twig"] %}
				{% endfor %}
			</div>
		</div>
	</section>

{% endblock %}